<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntelitraderMobile.Views.InfoUsuario">
    <ContentPage.Content>
        <StackLayout Spacing="40">

            <StackLayout Orientation="Horizontal">
                <Label Text="Id:" />
                <Label x:Name="id" Text="{Binding id}" />
            </StackLayout>
            <StackLayout>
                <Label Text="firstName" />
                <Entry x:Name="firstName" Text="{Binding firstName}" />
            </StackLayout>
            <StackLayout>
                <Label Text="surname" />
                <Entry x:Name="surname" Text="{Binding surname}" />
            </StackLayout>
            <StackLayout>
                <Label Text="age" />
                <Entry x:Name="age" Text="{Binding age}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="creationDate: " />
                <Label x:Name="creationDate" Text="{Binding creationDate}" />
            </StackLayout>
            <Button x:Name="Botao" Text="Atualizar"/>
            <Label x:Name="Resposta"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>